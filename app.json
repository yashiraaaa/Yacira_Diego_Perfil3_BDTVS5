{
  "expo": {
    "name": "navegador-app",
    "slug": "navegador-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splashh.png",
      "resizeMode": "contain",
      "backgroundColor": "#4A90E2", 
      "splashAnimation": {
        "type": "fade",  
        "duration": 1000
      }
    },
    "backgroundGradient": {
      "type": "linear",
      "colors": ["#4A90E2", "#50E3C2"], 
      "start": [0, 0],
      "end": [1, 1]
    },    
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
